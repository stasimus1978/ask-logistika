{
  "trailingComma": "none",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "arrowParens": "avoid",
  "bracketSpacing": true,

  "importOrder": [
    "sr-only",
    "use server",
    "use client",

    "<THIRD_PARTY_MODULES>",

    "<TYPES>",
    "@/types/(.*)$",

    "@/components/(.*)$",

    "@/components/ui/(.*)$",

    "@/components/layout/(.*)$",

    "@/components/shared/(.*)$",

    "@/components/icons/(.*)$",

    "@/config/constants/(.*)$",
    "@/config/meta/(.*)$",
    "@/config/routes/(.*)$",
    "@/config/selectors/(.*)$",

    "@/config/(.*)$",

    "@/core/actions/(.*)$",
    "@/core/services/(.*)$",

    "@/core/mutations/(.*)$",
    "@/core/queries/(.*)$",

    "@/core/providers/(.*)$",

    "@/core/hooks/(.*)$",
    "@/core/stores/(.*)$",

    "@/core/validation/(.*)$",

    "@/core/libs/(.*)$",

    "@/core/utils/(.*)$",

    "@/core/(.*)$",

    "@/prisma/(.*)$",

    "@/public/(.*)$",

    "@/styles/(.*)$",

    "^../(.*)$",

    "^./(.*)$"
  ],

  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,

  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],

  "bracketSameLine": false,
  "embeddedLanguageFormatting": "auto",

  "printWidth": 100,
  "proseWrap": "always"
}
